{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "Item",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "basePrice": {
      "type": "biginteger",
      "required": true
    },
    "pricingType": {
      "type": "enumeration",
      "enum": [
        "rental",
        "product",
        "service"
      ],
      "default": "rental",
      "required": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml",
        "maxLengthWords": null
      },
      "customField": "plugin::ckeditor5.CKEditor",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "uses": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::use.use",
      "mappedBy": "items"
    },
    "specifications": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::specification.specification",
      "mappedBy": "items"
    },
    "productType": {
      "type": "enumeration",
      "enum": [
        "machine",
        "manual",
        "item"
      ],
      "required": true
    },
    "accessories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::accessory.accessory",
      "mappedBy": "items"
    },
    "deposit": {
      "type": "biginteger",
      "required": true
    },
    "additionalInformation": {
      "type": "text"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "items"
    },
    "subcategories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::subcategory.subcategory",
      "mappedBy": "items"
    },
    "amount": {
      "type": "biginteger",
      "required": true
    }
  }
}
